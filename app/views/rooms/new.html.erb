
<div class="container">
  <div class="row">
    <%= render "shared/error" %>
    <%= form_for @room, url: {action: "create"}, html: {class: "form-group"} do |f| %>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: "form-control"%>
      </div>
      <div class="form-group">
        <label>Area</label>
        <%= f.text_field :area, class: "form-control" %>
      </div>
      <div class="form-group">
        <label>Quantity</label>
        <%= f.text_field :qty, class: "form-control" %>
      </div>
      <%= f.submit "create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
